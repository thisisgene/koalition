section.links#links
  .links-wrap  
    .flex.flex--center
      .col-spread
        {% assign pages = site.pages | where: 'ref', 'links' %}
        
        
        {% for this_page in pages %}
        
        {% if this_page.language == page.language %}
      
        h1.title-text 
          {{this_page.title}}
        
        p.lead-text 
          {{this_page.content}} 
        
        {% endif %}
        
        {% endfor %}
    
    .flex.flex--center
      .col-full

        .cards
          
          {% assign posts = site.posts | where:'categories', 'literatur' %}
          {% assign lang_posts=posts | where:'language', page.language | sort: 'weight' %}
          {% assign read-more=site.read-more | where:'language', page.language | first %}
          {% for post in lang_posts %}
          
          .card
           
            a(target="blank" href="{{post.link}}")
              img.card-image(src='{{site.baseurl}}{{ post.image }}')
            a(target="blank" href="{{post.link}}")
              .card-content
                .card-content--header
                  .title-text.small.title--project {{ post.title }}
                  
                  .project-sub-title.lead-text {{ post.subtitle }}
                      
                .card-content--text
                  div 
                    {{ post.content }}
                  
